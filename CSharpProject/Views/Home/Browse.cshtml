@model List<CSharpProject.Models.Entry>

@{
    ViewBag.Title = "Browse";
}
<h2>@ViewBag.Title.</h2>


@*Use this table from FitnessFrog app to design the entries page.  Be careful that in the FitFrog app, this is on the Index page, but here it is on the Browse page.*@

<table class="table">
    <tr>
        <th>Name</th>
        <th>Color</th>
        <th class="hidden-xs">Bloom Season</th>
        <th class="hidden-sm hidden-xs">Tetraploid</th>
        <th>Height (inches)</th>
        <th class="hidden-xs">Bloom Size (inches)</th>
        <th class="hidden-sm hidden-xs">Reblooms</th>
        <th>&nbsp;</th>
     </tr>


